<div id="homepage">
  <div class="col-md-9 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag regular_marathons_path, method: :get do %>
            <div class="form-group">
              <%= label_tag(:event, "Event") %>
              <%= select_tag(:event, options_for_select(Marathon.all.map { |m| [m.name, m.slug] }), class: 'form-control') %>
            </div>
            <div class="form-group">
              <%= label_tag(:bib, "Bib") %>
              <%= number_field_tag(:bib, nil, min:0, class: 'form-control') %>
            </div>

            <%= submit_tag("Search", class: "btn btn-default") %>
        <% end %>
      </div>
    </div>
  </div>
</div>