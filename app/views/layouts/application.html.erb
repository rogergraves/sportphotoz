<!DOCTYPE html>
<html>
<head>
  <title>Sportphotoz</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container" id="info-messages">
    <% flash.each do |name,msg| %>
        <%= content_tag :div, msg, class: "alert alert-info"  %>
    <% end %>
</div>


<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Sportphotoz', root_path, class: "navbar-brand" %>
    </div>
    <div id="navbar" class="collapse navbar-collapse navbar-right">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home</a></li>
        <li><%= link_to "About", pages_about_path %></li>
        <li><%= link_to "Contact Us", contacts_path %></li>
        <li><%= link_to "Cart", regular_cart_path %></li>
      </ul>
    </div>
  </div>
</nav>


<%= yield %>

</body>
</html>
