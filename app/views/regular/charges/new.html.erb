<% if @order.empty? %>
    <div class="container">
      <div class="page-header">
        <h1>Your cart is empty</h1>
      </div>
    </div>
<% else %>
    <div class="container">
      <div class="page-header">
        <h1>Checkout</h1>
      </div>

      <div class="container">
        <%= form_tag regular_charges_path do %>
            <article>
              <label class="amount">
                <span>Amount: <%= number_to_currency @order.subtotal %></span>
              </label>
            </article>

            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="A month's subscription"
                    data-amount="<%= @order.subtotal_cents %>"></script>
        <% end %>
      </div>
    </div>
<% end %>